console.log(string1 + string2);&lt;/code&gt;&lt;/pre&gt;
&lt;/div&gt;

&lt;br&gt;

&lt;div data-my-code-box&gt;
    &lt;pre data-cb-name="arrays" data-cb-active&gt;&lt;code class="no-highlight"&gt;let numbers = [5, 3, 1];
let strings = ["code", "box"];&lt;/code&gt;&lt;/pre&gt;
    &lt;pre data-cb-name="object"&gt;&lt;code class="no-highlight"&gt;let book = {
