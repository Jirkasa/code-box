<div class="code-example">
    <button class="code-example__collapsible-button">
        <div class="code-example__collapsible-button-dropdown-icon">
            <svg>
                <use xlink:href="../../static/icon-sprite.svg#arrow-right"></use>
            </svg>
        </div>
        <span>HTML</span>
    </button>
    <div class="code-example__collapsible">
        <pre class="code-example__code"><code class="language-html">&lt;div data-my-code-box&gt;
    &lt;pre data-cb-name="addition" data-cb-active&gt;&lt;code class="no-highlight"&gt;let x = 1;
let y = 2;

console.log("result: " + (x + y));&lt;/code&gt;&lt;/pre&gt;
    &lt;pre data-cb-name="connecting strings"&gt;&lt;code class="no-highlight"&gt;let string1 = "This is";
